# colors
#########################################################
export PS1="%F{yellow}[%n]%f %F{white}%~%f$ "
export CLICOLOR=0
export LSCOLORS=dxcxexdxbxegedabagacad
export LS_COLORS="di=33;40:ln=32;40:so=34;40:pi=33;40:ex=31;40:bd=34;46:cd=34;43:su=0;41:sg=0;46:tw=0;42:ow=0;43:"


# terminal
#########################################################
export LANG="en_US.UTF-8"
export LC_ALL="en_US.UTF-8"


# brew
#########################################################
eval "$(/opt/homebrew/bin/brew shellenv)"


# Suppress Whisper and PyTorch warnings
#########################################################
export WHISPER_WEIGHTS_ONLY=True
export PYTHONWARNINGS="ignore"


# nvm
#########################################################
export NVM_DIR="$HOME/.nvm"
[ -s "/opt/homebrew/opt/nvm/nvm.sh" ] && \. "/opt/homebrew/opt/nvm/nvm.sh"
[ -s "/opt/homebrew/opt/nvm/etc/bash_completion" ] && \. "/opt/homebrew/opt/nvm/etc/bash_completion"
